@page "/"
@inherits IndexModel

<div class="grid-x grid-margin-x">
    <div class="medium-6 cell">
        <h1 class="debug text primary">Hello, world!</h1>
        <h2 class="debug text secondary">Hello, world!</h2>
        <h3 class="debug text success">Hello, world!</h3>
        <h4 class="debug text warning">Hello, world!</h4>
        <h5 class="debug text alert">Hello, world!</h5>
    </div>
    <div class="medium-6 cell">
        <button class="button primary">Primary</button>
        <button class="button secondary">Secondary</button>
        <button class="button success">Success</button>
        <button class="button warning">Warning</button>
        <button class="button alert">Alert</button>
    </div>
</div>
<p>Welcome to your new app.</p>
<div>WindowWidth: @WindowWidth</div>
<button class="button button secondary" onclick="@(async () => await GetWindowWidth())">GetWindowWidth</button>

<br />

<SurveyPrompt Title="How is Blazor working for you?" />
