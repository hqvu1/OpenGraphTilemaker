@implements IDisposable
@implements ITab

<li class="tabs-title @TitleCssClass">
    <a onclick="@Activate">
        @Title
    </a>
</li>

@functions {

    [CascadingParameter] private TabSet ContainerTabSet { get; set; }

    [Parameter] private string Title { get; set; }

#pragma warning disable BL9993 // Component parameter has public setter
    [Parameter] public Microsoft.AspNetCore.Components.RenderFragment ChildContent { get; set; }
#pragma warning restore BL9993 // Component parameter has public setter

    string TitleCssClass => ContainerTabSet.ActiveTab == this ? "is-active" : null;

    protected override void OnInit()
    {
        ContainerTabSet.AddTab(this);
    }

    public void Dispose()
    {
        ContainerTabSet.RemoveTab(this);
    }

    void Activate()
    {
        ContainerTabSet.SetActivateTab(this);
    }

}